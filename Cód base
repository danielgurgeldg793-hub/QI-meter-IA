  <div class="quiz-container">
    <div id="quiz">
      <div id="timer">Tempo restante: <span id="time">15</span>s</div>
      <div id="question-container"></div>
      <button id="next-btn">PrÃ³xima</button>
    </div>
    <div id="result"></div>
